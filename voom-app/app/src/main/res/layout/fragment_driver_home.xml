<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".driver.home.DriverHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="32dp"
        android:paddingHorizontal="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="@string/today"
            android:textSize="32dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="@string/date_today"
            android:textSize="24dp"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="@string/rides_today"
                android:textSize="16dp"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="@string/money_earned"
                android:textSize="16dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="@string/status_inactive"
                android:textSize="24dp"
                android:textStyle="normal"
                android:paddingHorizontal="16dp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toggle_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="@string/status_active"
                android:textSize="24dp"
                android:textStyle="normal"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="32dp"
            app:cardUseCompatPadding="true">

            <org.osmdroid.views.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stop_button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="16dp"
                android:text="@string/stop"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/panic_button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="16dp"
                android:layout_marginLeft="16dp"
                android:text="@string/panic"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/panic"
                app:cornerRadius="32dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>