<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="inc.visor.voom.app.shared.SplashFragment"
        android:label="Splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_mainDriverFragment"
            app:destination="@id/mainDriverFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_mainUserFragment"
            app:destination="@id/mainUserFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_mainAdminFragment"
            app:destination="@id/mainAdminFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="inc.visor.voom.app.unauthenticated.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/vehicleApproveFragment"
        android:name="inc.visor.voom.app.admin.driver_approve.VehicleApproveFragment"
        android:label="Vehicle Approve">

        <argument
            android:name="requestId"
            app:argType="string" />

        <deepLink
            app:uri="voom://vehicle-requests/{requestId}" />
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="inc.visor.voom.app.unauthenticated.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainUserFragment"
            app:destination="@id/mainUserFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainDriverFragment"
            app:destination="@id/mainDriverFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_to_mainDriverFragment"
        app:destination="@id/mainDriverFragment" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="inc.visor.voom.app.unauthenticated.password.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="inc.visor.voom.app.unauthenticated.password.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password">
        <action
            android:id="@+id/action_resetPasswordFragment_to_mainUserFragment"
            app:destination="@id/mainUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainUserFragment"
        android:name="inc.visor.voom.app.user.main.MainUserFragment"
        android:label="fragment_main_user"
        tools:layout="@layout/fragment_main_user"/>
    <fragment
        android:id="@+id/mainDriverFragment"
        android:name="inc.visor.voom.app.driver.main.MainDriverFragment"
        android:label="fragment_main_driver"
        tools:layout="@layout/fragment_main_driver" />
    <fragment
        android:id="@+id/driverRideHistoryFragment"
        android:name="inc.visor.voom.app.driver.history.DriverRideHistoryFragment"
        android:label="fragment_driver_ride_history"
        tools:layout="@layout/fragment_driver_ride_history" />
    <fragment
        android:id="@+id/mainAdminFragment"
        android:name="inc.visor.voom.app.admin.main.MainAdminFragment"
        android:label="fragment_main_admin"
        tools:layout="@layout/fragment_main_admin" />
</navigation>